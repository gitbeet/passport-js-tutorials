<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link
      rel="stylesheet"
      href="styles/styles.css"
    />
    <title>Sign in</title>
  </head>
  <body>
    <main>
      <h1>Sign in</h1>
      <% if (messages.error) { %> <%= messages.error %> <% } %>
      <form
        action="/sign-in"
        method="post"
      >
        <div class="input-field">
          <label for="email">Email</label>
          <input
            id="email"
            name="email"
            type="email"
            required
            placeholder="m@example.com"
          />
        </div>
        <div class="input-field">
          <label for="password">Password</label>
          <input
            name="password"
            id="password"
            type="password"
            required
            placeholder="******"
          />
        </div>
        <button type="submit">Sign in</button>
      </form>
      <a href="/sign-up">Sign up</a>
    </main>
  </body>
</html>
